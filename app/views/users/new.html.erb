<h1>Make a new user</h1>

<%= form_for @user do |f| %>

  <!--checks for errors and publishes error messages
  only occurs in a new render after first time form submitted -->

  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <%= @user.errors.full_messages.each do |x| %>
          <li><%= @message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- actual form fields -->
  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions"><%= f.submit %></div>
<% end %>
